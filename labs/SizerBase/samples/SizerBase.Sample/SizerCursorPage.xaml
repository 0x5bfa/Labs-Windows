<Page x:Class="SizerBase.Sample.SizerCursorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="using:CommunityToolkit.Labs.WinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid MinHeight="300" MinWidth="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border x:Name="SomeContent"
            MinWidth="200"
            MaxWidth="600"/>
        <controls:ContentSizer TargetControl="{x:Bind SomeContent}"
                               Cursor="Hand"
                               Grid.Column="1"/>
    </Grid>
</Page>
