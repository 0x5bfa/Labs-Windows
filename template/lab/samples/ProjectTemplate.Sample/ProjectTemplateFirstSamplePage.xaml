<Page
	x:Class="ProjectTemplate.Sample.ProjectTemplateFirstSamplePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:lib="using:CommunityToolkit.Labs.WinUI.ProjectTemplateRns"
	xmlns:local="using:ProjectTemplate.Sample"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<lib:TemplatedControlStyle />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<StackPanel Spacing="15">
		<TextBlock
			x:Name="PrimaryText"
			FontFamily="{x:Bind TextFontFamily, Mode=OneWay}"
			FontSize="{x:Bind TextSize, Mode=OneWay}"
			Foreground="{x:Bind TextForeground, Mode=OneWay}"
			Text="Add sample here."
			Visibility="{x:Bind IsTextVisible, Mode=OneWay}" />

		<lib:TemplatedControl FontSize="{x:Bind TextSize, Mode=OneWay}" Foreground="{x:Bind TextForeground, Mode=OneWay}" />

		<lib:TemplatedControl MyProperty="This property was provided from outside the control." />

		<lib:TemplatedControl Style="{StaticResource CustomTemplatedControlStyle}" />
	</StackPanel>
</Page>
